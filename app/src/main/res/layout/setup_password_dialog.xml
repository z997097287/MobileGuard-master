<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:background="@drawable/coner_bg_white"
    android:minHeight="150dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_setuppwd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="设置密码"
        android:textColor="#1ABDE5"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:layout_marginBottom="10dp"
        android:background="#1ABDE6" />
    <EditText
        android:id="@+id/et_first_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/edit_normal"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_affirm_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/edit_normal"
        android:hint="请再次输入密码"
        android:inputType="textPassword" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="10dp"
        android:background="#1ABDE6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="确认" />

        <View
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:background="#aABDE6" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:background="@android:color/white"/>
    </LinearLayout>

</LinearLayout>